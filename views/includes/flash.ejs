<!-- yha yhm dono condition likhni padegi because success array hai to , wo array exist karta hai but wo array empty hai eski uski length bhi hone chaiye  -->
<%if(success &&success.length){%> 
    <div class="row mt-3">
        <div class="alert alert-success offset-3 col-5 alert-dismissible fade show" role="alert">
            <%=success%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>
<%if(error &&error.length){%> 
    <div class="row mt-3">
        <div class="alert alert-danger offset-3 col-5 alert-dismissible fade show" role="alert">
            <%=error%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>

